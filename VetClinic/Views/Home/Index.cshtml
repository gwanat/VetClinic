@section title {
    <h1 style="text-align:center">@VetClinic.Resources.Resource.VetClinicManagementSystem</h1>
}

<div class="container mt-4">
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.HasClaim("Position", "Admin"))
        {
            <a class="nav-link btn my-4 w-100" asp-controller="doctors" asp-action="index">
                <section id="doctors">
                    <h2 class="text-center">@VetClinic.Resources.Resource.ManageDoctors</h2>
                    <p class="lead text-center">@VetClinic.Resources.Resource.ViewAndManage</p>
                </section>
            </a>
        }

        @if (User.HasClaim("Position", "Admin") || User.HasClaim("Position", "Doctor"))
        {
            <a class="nav-link btn my-4 w-100" asp-controller="patients" asp-action="index">
                <section id="patients">
                    <h2 class="text-center">@VetClinic.Resources.Resource.ManagePatients</h2>
                    <p class="lead text-center">@VetClinic.Resources.Resource.KeepTrack</p>
                </section>
            </a>
        }

        @if (User.HasClaim("Position", "Admin"))
        {
            <a class="nav-link btn my-4 w-100" asp-controller="rooms" asp-action="index">
                <section id="rooms">
                    <h2 class="text-center">@VetClinic.Resources.Resource.ManageRooms</h2>
                    <p class="lead text-center">@VetClinic.Resources.Resource.CheckAvail</p>
                </section>
            </a>
        }

        @if (User.HasClaim("Position", "Admin") || User.HasClaim("Position", "Doctor"))
        {
            <a class="nav-link btn my-4 w-100" asp-controller="appointments" asp-action="index">
                <section id="appointments">
                    <h2 class="text-center">@VetClinic.Resources.Resource.ManageAppointments</h2>
                    <p class="lead text-center">@VetClinic.Resources.Resource.ScheduleView</p>
                </section>
            </a>
        }
    }
    else
    {
		<section class="slider">
			<div class="hero-slider">
				<div class="single-slider" style="background-image:url('img/slider2.jpg')">
					<div class="container">
						<div class="row">
							<div class="col-lg-7">
								<div class="text">
									<h1>@VetClinic.Resources.Resource.Reliable <span>@VetClinic.Resources.Resource.VeterinaryCare</span> @VetClinic.Resources.Resource.ThatYouCan <span>@VetClinic.Resources.Resource.Trust</span></h1>
									<p>@VetClinic.Resources.Resource.WeProvide </p>
									<br />
									<div class="button">
										<a class=" btn btn-outline-primary my-2 my-sm-0" id="register" asp-area="Identity" asp-page="/Account/Register">
											<i class="bi bi-person-plus"></i> @VetClinic.Resources.Resource.Register
										</a>
										<a class="btn btn-outline-primary my-2 my-sm-0" id="login" asp-area="Identity" asp-page="/Account/Login">
											<i class="bi bi-box-arrow-in-right"></i> @VetClinic.Resources.Resource.Login
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="single-slider" style="background-image:url('img/slider.jpg')">
					<div class="container">
						<div class="row">
							<div class="col-lg-7">
								<div class="text">
									<h1>@VetClinic.Resources.Resource.Smart <span>@VetClinic.Resources.Resource.Solutions</span> @VetClinic.Resources.Resource.For<span>  @VetClinic.Resources.Resource.BusyVets</span></h1>
									<p>@VetClinic.Resources.Resource.Simplify </p>
									<br />
									<div class="button">
										<a class=" btn btn-outline-primary my-2 my-sm-0" id="register" asp-area="Identity" asp-page="/Account/Register">
											<i class="bi bi-person-plus"></i> @VetClinic.Resources.Resource.Register
										</a>
										<a class="btn btn-outline-primary my-2 my-sm-0" id="login" asp-area="Identity" asp-page="/Account/Login">
											<i class="bi bi-box-arrow-in-right"></i> @VetClinic.Resources.Resource.Login
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="single-slider" style="background-image:url('img/slider3.jpg')">
					<div class="container">
						<div class="row">
							<div class="col-lg-7">
								<div class="text">
									<h1>@VetClinic.Resources.Resource.Comprehensive <span>@VetClinic.Resources.Resource.PetHealth</span> @VetClinic.Resources.Resource.Services</h1>
									<p>@VetClinic.Resources.Resource.OurSystem</p>
									<br />
									<div class="button">
										<a class=" btn btn-outline-primary my-2 my-sm-0" id="register" asp-area="Identity" asp-page="/Account/Register">
											<i class="bi bi-person-plus"></i> @VetClinic.Resources.Resource.Register
										</a>
										<a class="btn btn-outline-primary my-2 my-sm-0" id="login" asp-area="Identity" asp-page="/Account/Login">
											<i class="bi bi-box-arrow-in-right"></i> @VetClinic.Resources.Resource.Login
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="schedule">
			<div class="container">
				<div class="schedule-inner">
					<div class="row">
						<div class="col-lg-4 col-md-6 col-12 ">
							<div class="single-schedule first">
								<div class="inner">
									<div class="icon">
										<i class="fa fa-ambulance"></i>
									</div>
									<div class="single-content">
										<h4>@VetClinic.Resources.Resource.EmergencyCases</h4>
										<p>@VetClinic.Resources.Resource.EfficientTools</p>
										<a href="#">@VetClinic.Resources.Resource.LEARNMORE<i class="fa fa-long-arrow-right"></i></a>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-md-6 col-12">
							<div class="single-schedule middle">
								<div class="inner">
									<div class="icon">
										<i class="icofont-prescription"></i>
									</div>
									<div class="single-content">
										<h4>@VetClinic.Resources.Resource.Optimized</h4>
										<p>@VetClinic.Resources.Resource.Manage</p>
										<a href="#">@VetClinic.Resources.Resource.LEARNMORE<i class="fa fa-long-arrow-right"></i></a>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-md-12 col-12">
							<div class="single-schedule last">
								<div class="inner">
									<div class="icon">
										<i class="icofont-ui-clock"></i>
									</div>
									<div class="single-content">
										<h4>@VetClinic.Resources.Resource.AppointmentManagement</h4>
										<p>@VetClinic.Resources.Resource.Simplifybookings</p>
										<a href="#">@VetClinic.Resources.Resource.LEARNMORE<i class="fa fa-long-arrow-right"></i></a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="Feautes section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="section-title">
							<h2>@VetClinic.Resources.Resource.WeAreAlways</h2>
							<img src="img/section-img.png" alt="#">
							<p>@VetClinic.Resources.Resource.ManageAll </p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-4 col-12">
						<div class="single-features">
							<div class="signle-icon">
								<i class="icofont icofont-ambulance-cross"></i>
							</div>
							<h3>@VetClinic.Resources.Resource.AppointmentScheduling</h3>
							<p>@VetClinic.Resources.Resource.EffOrg</p>
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="single-features">
							<div class="signle-icon">
								<i class="icofont icofont-medical-sign-alt"></i>
							</div>
							<h3>@VetClinic.Resources.Resource.PatientRecords</h3>
							<p>@VetClinic.Resources.Resource.AccessDetailed</p>
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="single-features last">
							<div class="signle-icon">
								<i class="icofont icofont-stethoscope"></i>
							</div>
							<h3>@VetClinic.Resources.Resource.SmartTools</h3>
							<p>@VetClinic.Resources.Resource.Monitor</p>
						</div>
					</div>
				</div>
			</div>
		</section>
    }
</div>