@model Doctor
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="doctors" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="DoctorId" />
    }

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Specialty" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Specialty" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="Specialty"></span>
        </div>
    </div>

    <div class="row mb-3 mt-4">
        <div class="col-2">
            <input type="submit" class="btn btn-outline-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>
