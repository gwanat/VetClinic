@model List<Doctor>

@section title {
    <h2 style="font-family: 'Times New Roman', Times, serif; ">Doctors</h2>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Specialty</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Name</td>
                    <td>@doctor.Specialty</td>
                    <td><a class="btn btn-outline-primary" asp-controller="doctors" asp-action="edit" asp-route-id="@doctor.DoctorId">Edit</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="doctors" asp-action="delete" asp-route-doctorid="@doctor.DoctorId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<br />
<a class="btn btn-outline-success" asp-controller="doctors" asp-action="add">Add</a>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this doctor?");
        }
    </script>
}
