@model List<Doctor>

@section title {
    <h2>Doctors</h2>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Specialty</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td class="align-middle text-center">@doctor.Name</td>
                    <td class="align-middle text-center">@doctor.Specialty</td>
                    <td class="align-middle text-center">
                        <a class="btn" asp-controller="doctors" asp-action="edit" asp-route-id="@doctor.DoctorId"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn" asp-controller="doctors" asp-action="delete" asp-route-doctorid="@doctor.DoctorId" onclick="return confirmDelete()"><i class="bi bi-trash"></i> Delete </a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
<br />
<a class="btn" asp-controller="doctors" asp-action="add"><i class="bi bi-plus-circle"></i> Add Doctor</a>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this doctor?");
        }
    </script>
}
