
@model List<Pet>

@section title {
    <h3>Pets</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in Model)
            {
                <tr>
                    <td>@pet.Name</td>
                    <td>@pet.Description</td>
                    <td><a class="btn btn-link" asp-controller="pets" asp-action="edit" asp-route-id="@pet.PetId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="pets" asp-action="delete" asp-route-petid="@pet.PetId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" asp-controller="pets" asp-action="add">Add</a>
}
@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this pet?");
        }
    </script>
}