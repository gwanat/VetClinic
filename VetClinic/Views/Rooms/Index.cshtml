@model List<Room>

@section title {
    <h3>Rooms</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Type</th>
                <th>Occupied</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Type</td>
                    <td>@(room.IsOccupied ? "Yes" : "No")</td>
                    <td>@room.Description</td>
                    <td><a class="btn btn-link" asp-controller="rooms" asp-action="edit" asp-route-id="@room.RoomId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="rooms" asp-action="delete" asp-route-id="@room.RoomId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<br />
<a class="btn btn-primary" asp-controller="rooms" asp-action="add">Add Room</a>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this room?");
        }
    </script>
}
