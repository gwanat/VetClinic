@model Appointment
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="Appointments" asp-action="@action" asp-route-id="@Model.AppointmentId" enctype="multipart/form-data">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="AppointmentId" />
    }

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="StartTime" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="StartTime" class="form-control" />
            <span class="text-danger" asp-validation-for="StartTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EndTime" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="EndTime" class="form-control" />
            <span class="text-danger" asp-validation-for="EndTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="ClientName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="ClientName" class="form-control" />
            <span class="text-danger" asp-validation-for="ClientName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="ClientPhoneNumber" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="ClientPhoneNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="ClientPhoneNumber"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>