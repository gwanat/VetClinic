@model Appointment
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="appointments" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="AppointmentId" />
    }

    

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="StartTime" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="StartTime" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="StartTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EndTime" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="EndTime" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="EndTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="ClientName" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="ClientName" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="ClientName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Doctor.Name" class="col-form-label fw-bold">Doctor</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Doctor.Name" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="Doctor.Name"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Patient.PatientName" class="col-form-label fw-bold">Pet's name</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Patient.PatientName" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="Patient.PatientName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Room.RoomNumber" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Room.RoomNumber" class="form-control" />
        </div>
        <div class="col  mt-2">
            <span class="text-danger" asp-validation-for="Room.RoomNumber"></span>
        </div>
    </div>

    <div class="row mb-3 mt-4">
        <div class="col-2">
            <input type="submit" class="btn btn-outline-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>
