@model VetClinic.Models.Appointment
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="Appointments" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="AppointmentId" />
    }

    <div asp-validation-summary="None" class="text-danger"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="StartTime" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="StartTime" class="form-control" />
        </div>
        <div class="col mt-2">
            <span class="text-danger" asp-validation-for="StartTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EndTime" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="datetime-local" asp-for="EndTime" class="form-control" />
        </div>
        <div class="col mt-2">
            <span class="text-danger" asp-validation-for="EndTime"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="DoctorId" class="col-form-label fw-bold">Doctor</label>
        </div>
        <div class="col-6">
            <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctors"></select>
        </div>
        <div class="col mt-2">
            <span class="text-danger" asp-validation-for="DoctorId"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="PatientName" class="col-form-label fw-bold"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="PatientName" class="form-control" />
        </div>
        <div class="col mt-2">
            <span class="text-danger" asp-validation-for="PatientName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="RoomId" class="col-form-label fw-bold">Room</label>
        </div>
        <div class="col-6">
            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.Rooms"></select>
        </div>
        <div class="col mt-2">
            <span class="text-danger" asp-validation-for="RoomId"></span>
        </div>
    </div>

    <div class="row mb-3 mt-4">
        <div class="col-2">
            <input type="submit" class="btn btn-outline-primary" value="Save" />
        </div>
        <div class="col-6"></div>
    </div>
</form>
