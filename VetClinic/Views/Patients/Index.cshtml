@model List<Patient>

@section title {
    <h2 style="font-family: 'Times New Roman', Times, serif; ">Patients</h2>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Owner's Name</th>
                <th>Pet's name</th>
                <th>Species</th>     
                <th>Breed</th>
                <th>Age</th>
                <th>Assigned Doctor</th>
                <th>Diagnosis</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.OwnerInfo</td>
                    <td>@patient.PatientName</td>
                    <td>@patient.Type</td>
                    <td>@patient.Breed</td>
                    <td>@patient.Age</td>
                    <td>@(patient.Doctor != null ? patient.Doctor.Name : "Not Assigned")</td>
                    <td>@patient.Diagnosis</td>
                    <td><a class="btn btn-outline-primary" asp-controller="patients" asp-action="edit" asp-route-id="@patient.PatientId">Edit</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="patients" asp-action="delete" asp-route-id="@patient.PatientId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
<br />
<a class="btn btn-outline-success" asp-controller="patients" asp-action="add">Add</a>
@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this patient?");
        }
    </script>
}
